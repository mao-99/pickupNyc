generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id Int @id @default(autoincrement())
  date DateTime @default(now())
  location String
  borough String
  count Int @default(0)
  total Int @default(14)
  pickup Boolean @default(true)
  price Float @default(0)
  sport String
}